menu "MacroPad Configuration"

config MACROPAD_WIFI_SSID
    string "Wi-Fi SSID"
    default ""
    help
        Wi-Fi SSID for SNTP time synchronization. Leave empty to disable Wi-Fi.

config MACROPAD_WIFI_PASSWORD
    string "Wi-Fi Password"
    default ""
    help
        Wi-Fi password for SNTP time synchronization.

config MACROPAD_NTP_SERVER
    string "NTP Server"
    default "pool.ntp.org"
    help
        SNTP server hostname used to synchronize system time.

config MACROPAD_TZ
    string "Timezone (TZ env format)"
    default "UTC0"
    help
        Timezone string in POSIX TZ format, e.g. CST-8, EST5EDT,M3.2.0/2,M11.1.0/2.

config MACROPAD_HA_BASE_URL
    string "Home Assistant Base URL"
    default ""
    help
        Home Assistant base URL used by the REST event bridge, e.g.
        http://homeassistant.local:8123

config MACROPAD_HA_BEARER_TOKEN
    string "Home Assistant Bearer Token"
    default ""
    help
        Long-lived access token used as Authorization: Bearer <token>.
        Keep empty to disable authenticated requests.

config MACROPAD_WEB_API_KEY
    string "Web Service API Key (X-API-Key header)"
    default ""
    help
        API key required by the local web service when non-empty.
        Sent by clients as HTTP header: X-API-Key: <value>.
        Leave empty to disable API-key authentication.

config MACROPAD_WEB_BASIC_AUTH_USER
    string "Web Service Basic Auth Username"
    default ""
    help
        Basic Auth username for local web service.
        Basic Auth is enabled only when both username and password are non-empty.
        Leave empty to disable Basic Auth.

config MACROPAD_WEB_BASIC_AUTH_PASSWORD
    string "Web Service Basic Auth Password"
    default ""
    help
        Basic Auth password for local web service.
        Basic Auth is enabled only when both username and password are non-empty.
        Leave empty to disable Basic Auth.

config MACROPAD_OTA_DEFAULT_URL
    string "Default OTA URL (HTTPS)"
    default ""
    help
        Optional default HTTPS firmware URL for OTA endpoint.
        Used when /api/v1/system/ota is called without a URL payload.

config MACROPAD_OTA_HTTP_TIMEOUT_MS
    int "OTA HTTP Timeout (ms)"
    default 15000
    range 2000 120000
    help
        HTTP timeout for OTA download requests.

endmenu
